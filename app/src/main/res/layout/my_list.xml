<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:orientation="vertical" android:weightSum="1">

    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_alignParentStart="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:id="@+id/button" android:layout_alignBottom="@+id/editText" android:layout_toRightOf="@+id/editText"
            android:layout_toEndOf="@+id/editText"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_centerHorizontal="true"
            android:layout_below="@+id/editText"/>
</RelativeLayout>
